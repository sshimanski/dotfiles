"3.16.0 (created: 2017/02/01 00:55:15)

source! /home/shim/.vimperatorrc.local

set editor="urxvt -e nvim"
set hintchars=hjklasdfgyuiopqwertnmzxcvb
set ignorecase
set noanimations
set smartcase
set titlestring=Firefox
set visualbell

highlight Hint -append font-size:14px;

ignorekeys add inoreader.com -except=<C-n>,<C-p>
ignorekeys add youtube.com -except=<C-n>,<C-p>
ignorekeys add gerrit.devops.ose.discsrv.co.za -except=<C-n>,<C-p>

nmap d <C-d>
nmap j 4<C-e>
nmap k 4<C-y>

inoremap <C-a> <C-Home><C-S-End>

inoremap <C-n> <Down>
inoremap <C-p> <Up>
inoremap <C-b> <Left>
inoremap <C-f> <Right>

nnoremap ,sv :source ~/.vimperatorrc<CR>

let mapleader = ","
nmap <leader>k :quit<CR>
nmap [b <C-p>
nmap ]b <C-n>

qmark b http://www.bcse.by/ru/currencymarket/rates/0
qmark c https://ru.investing.com/currencies/eur-usd
qmark e https://translate.google.com/#en/ru/
qmark i http://www.inoreader.com
qmark m http://somafm.com/player/#/now-playing/thetrip
qmark r https://translate.google.com/#ru/en/
qmark R https://doc.rust-lang.org/book/second-edition/
qmark w https://yandex.by/pogoda/brest/details
qmark z https://ru.investing.com/currencies/usd-pln

" vim: set ft=vimperator:

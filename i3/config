# Mod_system
set $Locker i3lock

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+q mode "$mode_system"

# colors
set $bg-color               #2f343f
set $inactive-bg-color      #2f343f
set $text-color             #f3f4f5
set $inactive-text-color    #676e7d
set $urgent-bg-color        #C44441
set $unused                 #676E7D

# window colors
#                       border              background          text                    indicator
client.focused          $bg-color           $bg-color           $text-color             $unused
client.unfocused        $inactive-bg-color  $inactive-bg-color  $inactive-text-color    $unused
client.focused_inactive $inactive-bg-color  $inactive-bg-color  $inactive-text-color    $unused
client.urgent           $urgent-bg-color    $urgent-bg-color    $text-color             $unused
